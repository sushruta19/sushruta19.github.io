---
export interface Props {
  article: {
    url: string;
    title: string;
    description: string;
    tag_list: string[];
    public_views_count: number;
  };
}

const { article } = Astro.props;
---

<!-- create a blog card using tailwindcss -->
<div class="flex flex-col rounded-lg shadow-lg overflow-hidden mb-4">
  <div
    class="flex-1 bg-white p-6 flex flex-col justify-between dark:bg-gray-800"
  >
    <div class="flex-1">
      <p class="text-sm leading-5 font-medium text-teal-600 dark:text-teal-400">
        <a
          href={article.url}
          class="hover:underline"
          target="_blank"
          rel="noopenner noreferer"
        >
          {article.title}
        </a>
      </p>
      <a
        href={article.url}
        class="block"
        target="_blank"
        rel="noopener noreferrer"
      >
        <h3
          class="mt-2 text-xl leading-7 font-semibold text-gray-900 dark:text-zinc-50"
        >
          {article.description.slice(0,article.description.lastIndexOf(' ', 135))+'...'}
        </h3>
        {
          article.tag_list.map((tag) => (
            <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700 mr-2 mt-2">
              {tag}
            </span>
          ))
        }
      </a>
    </div>
    <div class="mt-6 flex items-center">
      <div class="ml-3">
        <div class="flex text-sm leading-5 text-gray-500">
          <time datetime="2020-03-16" class="flex items-center">
